<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Multi Select Lookup (template)</masterLabel>
    <description
  >Custom Lookup box for user to enter name of record and select multiple records</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property
        name="title"
        label="Title"
        type="String"
        placeholder="Ex: Account Multi Select Lookup"
        description="Enter the desired title of this instance of the component"
      />
      <property
        name="iconName"
        label="Icon Name"
        required="true"
        type="String"
        placeholder="Ex: standard:account"
        description="Enter the name of the icon to be used on the queried/selected records"
      />
            <property
        name="objApiName"
        label="Object API Name"
        required="true"
        type="String"
        placeholder="Ex: Account"
        description="Enter the object API Name"
      />
            <property
        name="fieldApiNames"
        type="String"
        required="true"
        label="Field API Names"
        placeholder="Ex: Id, Name, AccountNumber"
        description="Enter the fields to query"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>